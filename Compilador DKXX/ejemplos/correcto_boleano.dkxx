declare{

    #definimos funcion
    function int resto (int n, int m){

        # retornamos expresion calculada a partir de parametros
        return n-((n/m)*m);
    }
}
main{
    # leemos valor por teclado
    int i = input();

    # devolvemos valor por pantalla segun la evaluacion logica
    if((i >= 0) & resto(i, 2) == 0){
        output(-1);
    }
}